<?php
session_start();

if ($_SERVER['REQUEST_METHOD'] == 'POST') {
    $nombre = $_POST['nombre'];
    $precio = $_POST['precio'];

    if (!isset($_SESSION['carrito'])) {
        $_SESSION['carrito'] = [];
    }

    $_SESSION['carrito'][] = [
        'nombre' => $nombre,
        'precio' => $precio
    ];

    echo '<script>alert("El art√≠culo ' . $nombre . ' se ha agregado al carrito correctamente."); window.location.href = "/pagina/html/productos.html";</script>';
}
?>
